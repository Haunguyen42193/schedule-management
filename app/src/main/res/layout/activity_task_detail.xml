<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskDetailActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBack4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="412dp"
        android:layout_height="669dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/txtTitleTaskDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Task Detail"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:fontFamily="@font/alata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="3sp"
            android:shadowColor="@color/black"
            android:text="Id"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:fontFamily="@font/alata"
            android:id="@+id/txtId"
            android:layout_width="380dp"
            android:layout_height="38dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:fontFamily="@font/alata"
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="3sp"
            android:shadowColor="@color/black"
            android:text="User"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:fontFamily="@font/alata"
            android:id="@+id/txtUser"
            android:layout_width="380dp"
            android:layout_height="38dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:fontFamily="@font/alata"
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="3sp"
            android:shadowColor="@color/black"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:fontFamily="@font/alata"
            android:id="@+id/txtTitle"
            android:layout_width="380sp"
            android:layout_height="38dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/border"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="5sp"
            android:text="Name" />

        <TextView
            android:fontFamily="@font/alata"
            android:id="@+id/textView20"
            android:layout_width="400sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="3sp"
            android:shadowColor="@color/black"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtDes"
            android:layout_width="380sp"
            android:layout_height="40dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/border"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:paddingLeft="5sp"
            android:paddingTop="5sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/alata"
                    android:id="@+id/textView28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="3sp"
                    android:shadowColor="@color/black"
                    android:text="Started"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtStart"
                    android:layout_width="177sp"
                    android:layout_height="38sp"
                    android:layout_marginLeft="10sp"
                    android:background="@drawable/border"
                    android:paddingLeft="5sp"
                    android:paddingTop="5sp"
                    android:text="TextView"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/alata"
                    android:id="@+id/textView30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="3sp"
                    android:shadowColor="@color/black"
                    android:text="Completed"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <Switch
                    android:id="@+id/swComplete"
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:textColor="@color/black"
                    android:textSize="28sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:fontFamily="@font/alata"
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="3sp"
            android:shadowColor="@color/black"
            android:text="Categories"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Spinner

            android:id="@+id/spnCateDetail"
            android:layout_width="380dp"
            android:layout_height="38dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border"
            android:paddingLeft="5sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnReAddTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:text="Add"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnUpdateTask"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnUpdateTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/blue"

                android:text="Update"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDeleteTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:text="Delete"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnUpdateTask"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>